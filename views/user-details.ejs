<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details - LetsGo Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="min-h-screen">
        <div class="flex">
            <!-- Sidebar -->
            <div class="w-64 bg-gray-900 min-h-screen p-6">
                <h1 class="text-white text-2xl font-bold mb-8">LetsGo Admin</h1>
                <nav class="space-y-4">
                    <a href="/admin" class="text-gray-300 hover:bg-gray-800 block py-2 px-4 rounded">
                        <i class="fas fa-home mr-2"></i> Dashboard
                    </a>
                    <a href="/admin/users" class="text-white block py-2 px-4 rounded bg-blue-600">
                        <i class="fas fa-users mr-2"></i> Users
                    </a>
                    <a href="/admin/rides" class="text-gray-300 hover:bg-gray-800 block py-2 px-4 rounded">
                        <i class="fas fa-car mr-2"></i> Rides
                    </a>
                    <a href="/admin/wallets" class="text-gray-300 hover:bg-gray-800 block py-2 px-4 rounded">
                        <i class="fas fa-wallet mr-2"></i> Wallets
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="flex-1 p-8">
                <!-- Back Button -->
                <a href="/admin/users" class="text-blue-600 hover:underline mb-6 inline-block">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Users
                </a>

                <h2 class="text-3xl font-bold text-gray-800 mb-6">User Details</h2>

                <!-- User Profile Card -->
                <div class="bg-white rounded-lg shadow p-6 mb-8">
                    <div class="flex items-center space-x-6">
                        <div class="bg-blue-600 text-white w-20 h-20 rounded-full flex items-center justify-center text-3xl font-bold">
                            <%= user.full_name ? user.full_name.charAt(0).toUpperCase() : 'U' %>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-2xl font-bold text-gray-800"><%= user.full_name || 'No Name' %></h3>
                            <p class="text-gray-600"><i class="fas fa-phone mr-2"></i><%= user.phone %></p>
                            <p class="text-gray-600"><i class="fas fa-envelope mr-2"></i><%= user.email || 'No Email' %></p>
                        </div>
                        <div class="text-right">
                            <span class="px-4 py-2 rounded-full text-sm font-semibold <%= user.role === 'admin' ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %>">
                                <%= user.role.toUpperCase() %>
                            </span>
                            <p class="text-gray-500 text-sm mt-2">ID: #<%= user.id %></p>
                        </div>
                    </div>

                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6 pt-6 border-t">
                        <div>
                            <p class="text-gray-500 text-sm">Phone Verified</p>
                            <p class="text-lg font-semibold <%= user.phone_verified ? 'text-green-600' : 'text-red-600' %>">
                                <%= user.phone_verified ? '✓ Yes' : '✗ No' %>
                            </p>
                        </div>
                        <div>
                            <p class="text-gray-500 text-sm">Email Verified</p>
                            <p class="text-lg font-semibold <%= user.email_verified ? 'text-green-600' : 'text-red-600' %>">
                                <%= user.email_verified ? '✓ Yes' : '✗ No' %>
                            </p>
                        </div>
                        <div>
                            <p class="text-gray-500 text-sm">Rating</p>
                            <p class="text-lg font-semibold text-yellow-600">
                                <i class="fas fa-star mr-1"></i><%= user.rating || 0 %>
                            </p>
                        </div>
                        <div>
                            <p class="text-gray-500 text-sm">Member Since</p>
                            <p class="text-lg font-semibold"><%= new Date(user.created_at).toLocaleDateString() %></p>
                        </div>
                    </div>
                </div>

                <!-- Wallet Info -->
                <% if (wallet) { %>
                <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-lg shadow p-6 mb-8 text-white">
                    <h3 class="text-xl font-bold mb-4"><i class="fas fa-wallet mr-2"></i>Wallet Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <p class="text-purple-200 text-sm">Balance</p>
                            <p class="text-3xl font-bold">₦<%= parseFloat(wallet.balance || 0).toFixed(2) %></p>
                        </div>
                        <div>
                            <p class="text-purple-200 text-sm">Bank Verified</p>
                            <p class="text-xl font-semibold"><%= wallet.bank_verified ? '✓ Yes' : '✗ No' %></p>
                        </div>
                        <div>
                            <p class="text-purple-200 text-sm">Linked Accounts</p>
                            <p class="text-xl font-semibold"><%= Array.isArray(wallet.linked_bank_accounts) ? wallet.linked_bank_accounts.length : 0 %></p>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Ride History -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-xl font-bold text-gray-800 mb-4"><i class="fas fa-car mr-2"></i>Ride History</h3>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="border-b bg-gray-50">
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">ID</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Pickup</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Dropoff</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Fare</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Status</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (rides && rides.length > 0) { %>
                                    <% rides.forEach(ride => { %>
                                        <tr class="border-b hover:bg-gray-50">
                                            <td class="py-3 px-4">#<%= ride.id %></td>
                                            <td class="py-3 px-4"><%= ride.pickup_location %></td>
                                            <td class="py-3 px-4"><%= ride.dropoff_location %></td>
                                            <td class="py-3 px-4 font-semibold">₦<%= ride.fare || '0.00' %></td>
                                            <td class="py-3 px-4">
                                                <% 
                                                    const statusColors = {
                                                        'pending': 'bg-yellow-100 text-yellow-800',
                                                        'completed': 'bg-green-100 text-green-800',
                                                        'cancelled': 'bg-red-100 text-red-800',
                                                        'in_progress': 'bg-blue-100 text-blue-800'
                                                    };
                                                %>
                                                <span class="px-2 py-1 rounded text-sm <%= statusColors[ride.status] || 'bg-gray-100 text-gray-800' %>">
                                                    <%= ride.status %>
                                                </span>
                                            </td>
                                            <td class="py-3 px-4"><%= new Date(ride.created_at).toLocaleDateString() %></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="py-4 text-center text-gray-500">No rides found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>