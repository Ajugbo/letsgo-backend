<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wallets - LetsGo Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="min-h-screen">
        <div class="flex">
            <!-- Sidebar -->
            <div class="w-64 bg-gray-900 min-h-screen p-6">
                <h1 class="text-white text-2xl font-bold mb-8">LetsGo Admin</h1>
                <nav class="space-y-4">
                    <a href="/admin" class="text-gray-300 hover:bg-gray-800 block py-2 px-4 rounded">
                        <i class="fas fa-home mr-2"></i> Dashboard
                    </a>
                    <a href="/admin/users" class="text-gray-300 hover:bg-gray-800 block py-2 px-4 rounded">
                        <i class="fas fa-users mr-2"></i> Users
                    </a>
                    <a href="/admin/rides" class="text-gray-300 hover:bg-gray-800 block py-2 px-4 rounded">
                        <i class="fas fa-car mr-2"></i> Rides
                    </a>
                    <a href="/admin/wallets" class="text-white block py-2 px-4 rounded bg-blue-600">
                        <i class="fas fa-wallet mr-2"></i> Wallets
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="flex-1 p-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-6">All Wallets</h2>
                
                <!-- Total Balance Card -->
                <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-lg shadow p-6 mb-8 text-white">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-purple-200 text-sm">Total Balance Across All Wallets</p>
                            <p class="text-4xl font-bold">₦<%= totalBalance %></p>
                        </div>
                        <div class="bg-white bg-opacity-20 p-4 rounded-full">
                            <i class="fas fa-wallet text-4xl"></i>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow p-6">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="border-b bg-gray-50">
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">ID</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">User ID</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Balance</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Bank Verified</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Linked Accounts</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (wallets && wallets.length > 0) { %>
                                    <% wallets.forEach(wallet => { %>
                                        <tr class="border-b hover:bg-gray-50">
                                            <td class="py-3 px-4"><%= wallet.id %></td>
                                            <td class="py-3 px-4">
                                                <a href="/admin/users/<%= wallet.user_id %>" class="text-blue-600 hover:underline">
                                                    User #<%= wallet.user_id %>
                                                </a>
                                            </td>
                                            <td class="py-3 px-4">
                                                <span class="text-green-600 font-bold">₦<%= wallet.balance || '0.00' %></span>
                                            </td>
                                            <td class="py-3 px-4">
                                                <%= wallet.bank_verified ? 
                                                    '<span class="text-green-600"><i class="fas fa-check-circle"></i> Yes</span>' : 
                                                    '<span class="text-gray-400"><i class="fas fa-times-circle"></i> No</span>' 
                                                %>
                                            </td>
                                            <td class="py-3 px-4">
                                                <% 
                                                    const accounts = wallet.linked_bank_accounts || [];
                                                    const accountCount = Array.isArray(accounts) ? accounts.length : 0;
                                                %>
                                                <span class="px-2 py-1 rounded text-sm bg-gray-100 text-gray-800">
                                                    <%= accountCount %> account(s)
                                                </span>
                                            </td>
                                            <td class="py-3 px-4">
                                                <button class="text-blue-600 hover:text-blue-800 mr-2">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                                <button class="text-green-600 hover:text-green-800">
                                                    <i class="fas fa-eye"></i> View
                                                </button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="py-4 text-center text-gray-500">No wallets found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>