<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rides - LetsGo Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="min-h-screen">
        <div class="flex">
            <!-- Sidebar -->
            <div class="w-64 bg-gray-900 min-h-screen p-6">
                <h1 class="text-white text-2xl font-bold mb-8">LetsGo Admin</h1>
                <nav class="space-y-4">
                    <a href="/admin" class="text-gray-300 hover:bg-gray-800 block py-2 px-4 rounded">
                        <i class="fas fa-home mr-2"></i> Dashboard
                    </a>
                    <a href="/admin/users" class="text-gray-300 hover:bg-gray-800 block py-2 px-4 rounded">
                        <i class="fas fa-users mr-2"></i> Users
                    </a>
                    <a href="/admin/rides" class="text-white block py-2 px-4 rounded bg-blue-600">
                        <i class="fas fa-car mr-2"></i> Rides
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="flex-1 p-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-6">All Rides</h2>
                
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="border-b bg-gray-50">
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">ID</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">User</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Pickup</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Dropoff</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Fare</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Status</th>
                                    <th class="text-left py-3 px-4 font-semibold text-gray-700">Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (rides && rides.length > 0) { %>
                                    <% rides.forEach(ride => { %>
                                        <tr class="border-b hover:bg-gray-50">
                                            <td class="py-3 px-4"><%= ride.id %></td>
                                            <td class="py-3 px-4">User #<%= ride.user_id %></td>
                                            <td class="py-3 px-4"><%= ride.pickup_location %></td>
                                            <td class="py-3 px-4"><%= ride.dropoff_location %></td>
                                            <td class="py-3 px-4">â‚¦<%= ride.fare || '0.00' %></td>
                                            <td class="py-3 px-4">
                                                <% 
                                                    const statusColors = {
                                                        'pending': 'bg-yellow-100 text-yellow-800',
                                                        'completed': 'bg-green-100 text-green-800',
                                                        'cancelled': 'bg-red-100 text-red-800',
                                                        'in_progress': 'bg-blue-100 text-blue-800'
                                                    };
                                                %>
                                                <span class="px-2 py-1 rounded text-sm <%= statusColors[ride.status] || 'bg-gray-100 text-gray-800' %>">
                                                    <%= ride.status %>
                                                </span>
                                            </td>
                                            <td class="py-3 px-4"><%= new Date(ride.created_at).toLocaleDateString() %></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="py-4 text-center text-gray-500">No rides found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>